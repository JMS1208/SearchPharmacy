<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/itemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/dong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="서초동"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/load_addr_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="(서초구 서초중앙로 38 정우빌딩)"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    />
                <ImageView
                    android:id="@+id/moveThisBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_location2"
                    />
                <ImageView
                    android:id="@+id/shareBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_share"
                    />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dimPink"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/hosp_cnt_tv"
                    tools:text="병원: 10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/phar_cnt_tv"
                    tools:text="약국: 20"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:id="@+id/doc_cnt_tv"
                    tools:text="의사: 5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:id="@+id/conv_cnt_tv"
                    tools:text="근처 편의점: 15"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    />


            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/hosp_per_phar_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="병원/약국: 6.25"
                    />
                <TextView
                    android:id="@+id/doc_per_phar_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="의사/약국: 2.20"
                    />
                <TextView
                    android:id="@+id/conv_per_phar_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="편의점/약국: 7.50"
                    />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    
</androidx.constraintlayout.widget.ConstraintLayout>